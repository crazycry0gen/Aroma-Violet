@model Aroma_Violet.Models.Address

    
   <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AddressId)
        @Html.HiddenFor(model => model.ClientID, new { htmlAttributes = new { @class = "form-control" } })

<div class="form-group">

    @for (int i = 0; i < Model.Lines?.Count; i++)
    {

        <div class="col-md-10">
            @Html.EditorFor(model => model.Lines.OrderBy(m => m.Order).ToArray()[i], new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lines.OrderBy(m => m.Order).ToArray()[i], "", new { @class = "text-danger" })
        </div>
            
    }
        
            <div class="col-md-10">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Code" } })
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>
        </div>

