@model Aroma_Violet.Models.SMSDistributionItemModel

@{ 
    string ukey = Guid.NewGuid().ToString();
    var maxColumns = 15;

}

<table style="height:90%">
    <tr >
        <td colspan="@Model.Children.Count()"><input type="checkbox" /> <a href="#" class="btn btn-default" onclick="TogleVisible('@ukey')">@Model.Description</a></td>
        
    </tr>
    <tr id="@ukey" hidden>
        @for (int i = 0; i < Model.Children.Count(); i++)
        {
            <td >
                @Html.Partial("SMSDistributionItemModel", Model.Children[i])
            </td>
        }
    </tr>
</table>
