        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Novus@*<img src="~/Content/Images/Novus Logo.svg" class="logo-small"/>*@</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
 
</body>
</html>
