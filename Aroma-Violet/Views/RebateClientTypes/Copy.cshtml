@model Aroma_Violet.Models.RebateClientType

@{
    ViewBag.Title = "Copy";
    int sourceClientTypeID = (int)ViewBag.SourceClientTypeID;
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Hidden("sourceClientTypeID", sourceClientTypeID)
    @Html.HiddenFor(m=>m.RebateClientTypeId)

    <div class="form-horizontal">
        <h4>Copy Rebate Client Type</h4>
        <hr />
        <p>
            Copy a rebate structure for @ViewBag.ClientTypeName which client type?
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClientTypeID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClientTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>